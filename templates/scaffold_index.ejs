<ul class="breadcrumb">
	<li>
		<a href="/">Home</a>
		<span class="divider">/</span>
	</li>
	<li class="active">
		<a href="<%- @pathTo.models %>">models</a>
		<span class="divider">/</span>
	</li>
</ul>

<div class="page-header">
	<h1>Index of model</h1>
</div>

<div class="row-fluid">
	<div class="span12">
		<p><%- @link_to '<i class="icon-plus icon-white"></i> New model', @pathTo.new_model, {class: 'btn btn-primary'} %></p>
	</div>
</div>

<div class="row-fluid">
	<div class="span12">
		<% if @models?.length : %>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>ID</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<% for model in @models: %>
				<tr>
					<td><strong><%- @link_to "model ##{model.id}", @pathTo.model model %></strong></td>
					<td><%- @link_to '<i class="icon-remove icon-white"></i> Delete', @pathTo.model model, 
							class: 'btn btn-mini btn-danger'
							method: 'delete'
							remote: true
							jsonp: '(function (u) {location.href = u;})' %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<% else : %>
		<p class="alert alert-block alert-info"><strong>No models were found.</strong></p>
		<% end %>
	</div>
</div>
